# Description: A 3D Collision Detection and Rigid Body Dynamics Library for games and animation
# URL:         http://www.bulletphysics.com/Bullet/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python-setuptools cmake ninja freeglut
# Section:     libs

name=bullet
version=2.89
release=1
source=("https://github.com/bulletphysics/bullet3/archive/$version.tar.gz")

build() {
	cd "$SRC"/${name}3-$version
	mkdir -p build
	cd build
	cmake "$SRC"/${name}3-$version \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_BULLET2_DEMOS=0 \
		-DBUILD_CPU_DEMOS=0 \
		-DBUILD_SHARED_LIBS=1 \
		-DBUILD_PYBULLET=ON \
		-DBUILD_PYBULLET_NUMPY=OFF \
		-DBUILD_OPENGL3_DEMOS=OFF \
		-DINSTALL_LIBS=1 \
		-DINSTALL_EXTRA_LIBS=1 \
		-DBUILD_UNIT_TESTS=0 \
		-Wno-dev -G Ninja
	ninja
	DESTDIR="$PKG" ninja install
}
