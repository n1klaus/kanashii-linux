# Description: Linux application sandboxing and distribution framework
# URL:         https://flatpak.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool gobject-introspection appstream-glib bubblewrap json-glib libseccomp libxau ostree polkit xdg-dbus-proxy xdg-desktop-portal-gtk
# Section:     admin

name=flatpak
version=1.6.2
release=1
source=("https://github.com/flatpak/flatpak/releases/download/$version/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/flatpak/musl-fixes.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-dbus-config-dir=/usr/share/dbus-1/system.d \
		--with-priv-mode=setuid \
		--with-profile-dir=/etc/profile.d \
		--with-system-bubblewrap \
		--with-system-dbus-proxy \
		--with-system-helper-user=flatpak \
		--disable-documentation \
		--disable-gtk-doc

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install

	install -d -o root -g polkitd -m 750 "$PKG"/usr/share/polkit-1/rules.d

	chmod +x "$PKG"/etc/profile.d/flatpak.sh
}
