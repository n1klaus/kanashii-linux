# Description: Premier connectivity tool for remote login with the SSH protocol
# URL:         https://www.openssh.com/portable.html
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib pam libressl libedit
# Section:     net

name=openssh
version=8.2p1
release=1
backup=('etc/ssh/ssh_config'
	'etc/ssh/sshd_config')
source=("https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/ssh \
		--sbindir=/usr/bin \
		--sysconfdir=/etc/ssh \
		--with-pid-dir=/run \
		--with-default-path='/usr/local/sbin:/usr/local/bin:/usr/bin' \
		--with-xauth=/usr/bin/xauth \
		--with-privsep-path=/var/empty \
		--with-privsep-user=nobody \
		--with-libedit \
		--with-md5-passwords \
		--with-pam \
		--with-ssl-engine \
		--without-kerberos5 \
		--without-ldns \
		--disable-strip
	make
	make DESTDIR="$PKG" install

	install -Dm644 "$STUFF"/pam.d/sshd "$PKG"/etc/pam.d/sshd

	install -Dm644 "$STUFF"/svc/sshd.service "$PKG"/usr/lib/systemd/system/sshd.service
	install -Dm644 "$STUFF"/svc/sshd_at.service "$PKG"/usr/lib/systemd/system/sshd@.service
	install -Dm644 "$STUFF"/svc/sshd.socket "$PKG"/usr/lib/systemd/system/sshd.socket
	install -Dm644 "$STUFF"/tmpfiles/openssh "$PKG"/usr/lib/tmpfiles.d/openssh.conf
}
