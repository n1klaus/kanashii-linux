# Description: Perl HTML parser class
# URL:         https://search.cpan.org/dist/HTML-Parser/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  perl-html-tagset
# Section:     perl

name=perl-html-parser
version=3.72
release=1
options=('~emptydirs')
source=("https://www.cpan.org/authors/id/G/GA/GAAS/HTML-Parser-$version.tar.gz")

build() {
	cd "$SRC"/HTML-Parser-$version
	perl Makefile.PL INSTALLDIRS=vendor
	make
	make DESTDIR="$PKG" install
}
